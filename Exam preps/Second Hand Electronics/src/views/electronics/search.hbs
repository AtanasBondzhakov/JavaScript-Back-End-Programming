<section class="search">
    <h1>Search</h1>

    <form class="search-form" method="GET">
        <input type="text" class="search-name" name="searchName" placeholder="Search Name...">
        <input type="text" class="search-type" name="searchType" placeholder="Search Type...">
        <button type="submit" class="btn-search">Search</button>
    </form>

    {{#if electronics}}
    {{#each electronics}}
    <div class="search-result">
        <div class="search-list">
            <a href="/electronics/{{_id}}/details" class="added-electronics-in-market">
                <img src="{{image}}" class="picture-added-electronics">
                <h3>{{name}}</h3>
                <span>Price: ${{price}}</span>
            </a>
        </div>
    </div>
    {{/each}}
    {{else}}
    <div class="no-match">
        <p>No match was found!</p>
    </div>
    {{/if}}
</section>